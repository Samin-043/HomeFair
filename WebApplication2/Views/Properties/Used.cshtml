<div class="body-content">
    <div class="show_image">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="6000">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>

            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/back_property_2.gif" width="1230" height="560">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/back_property_1.gif" width="1230" height="560">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/back_property_4.gif" width="1230" height="560">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only"></span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only"></span>
            </a>

        </div>
    </div>

    <h2>USED PROPERTY</h2>

    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-12">
                <div class="block-content-wrap">
                    <h1>Purpose</h1>
                    <div class="middle-gap"></div>
                    <div class="header-block-content-wrap">
                        @{
                            @Html.ActionLink("> Sale", "Sale")
                        }

                    </div>
                    <div class="header-block-content-wrap">
                        @{
                            @Html.ActionLink("> Rent", "Rent")
                        }

                    </div>
                </div>

                <div class="middle-gap-1"></div>

                <div class="block-content-wrap">
                    <h1>Type</h1>
                    <div class="middle-gap"></div>
                    <div class="header-block-content-wrap">
                        @{
                            @Html.ActionLink("> Apartment", "Apartment")
                        }

                    </div>
                    <div class="header-block-content-wrap">
                        @{
                            @Html.ActionLink("> Commercial", "Commercial")
                        }

                    </div>
                </div>

                <div class="middle-gap-1"></div>

                <div class="block-content-wrap">
                    <h1>Status</h1>
                    <div class="middle-gap"></div>
                    <div class="header-block-content-wrap">
                        @{
                            @Html.ActionLink("> New", "New")
                        }

                    </div>
                    <div class="header-block-content-wrap">
                        @{
                            @Html.ActionLink("> Used", "Used")
                        }

                    </div>
                </div>



            </div>



            <div class="col-lg-8 col-md-12">


                @foreach (var item in Model)
                {
                    var value = item.Status;
                    var sum_value = Convert.ToString(item.AttachedBath + item.CommonBath);


                    if (value == "Used")
                    {

                        <div class="col-md-6">
                            <div class="card shadow">
                                <div class="inner">

                                    <img src="@Url.Content(item.PropertyImage)" width="310" height="260" class="card-img-top">

                                </div>

                                <div class="card-body">
                                    <h5 class="card-title">
                                        @{
                                            var name = item.PropertyName;
                                        }
                                        @Html.ActionLink(name, "View", new { id = item.Property_Id })

                                    </h5>
                                    <address class="item-address">
                                        @Html.DisplayFor(modelItem => item.Area),
                                        @Html.DisplayFor(modelItem => item.City)

                                    </address>
                                    <div class="detail-wrap">


                                        @{
                                            var type_value = item.PropertyType.PropertyTypeName;
                                            if (type_value == "Apartment")
                                            {
                                                <ul class="list-3-cols list-unstyled">
                                                    <li>
                                                        <div class="show_first">
                                                            <div class="show_icon_value">
                                                                @Html.DisplayFor(modelItem => item.PropertySize)
                                                                <strong>
                                                                    <i class="fas fa-ruler-combined"></i>
                                                                </strong>
                                                            </div>
                                                            <span>Sft</span>
                                                        </div>

                                                    </li>
                                                    <li>
                                                        <div class="show_first">
                                                            <div class="show_icon_value">
                                                                @Html.DisplayFor(modelItem => item.FloorNo)
                                                                <strong>
                                                                    <i class="fas fa-th"></i>
                                                                </strong>
                                                            </div>
                                                            <span>Floor no</span>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="show_first">
                                                            <div class="show_icon_value">
                                                                @Html.DisplayFor(modelItem => item.BedRoom)
                                                                <strong>
                                                                    <i class="fas fa-bed"></i>
                                                                </strong>
                                                            </div>
                                                            <span>Bedrooms</span>
                                                        </div>
                                                    </li>
                                                </ul>
                                            }
                                            else
                                            {
                                                <ul class="list-2-cols list-unstyled">
                                                    <li>
                                                        <div class="show_first">
                                                            <div class="show_icon_value">
                                                                @Html.DisplayFor(modelItem => item.PropertySize)
                                                                <strong>
                                                                    <i class="fas fa-ruler-combined"></i>
                                                                </strong>
                                                            </div>
                                                            <span>Sft</span>
                                                        </div>

                                                    </li>
                                                    <li>
                                                        <div class="show_first">
                                                            <div class="show_icon_value">
                                                                @Html.DisplayFor(modelItem => item.FloorNo)
                                                                <strong>
                                                                    <i class="fas fa-th"></i>
                                                                </strong>
                                                            </div>
                                                            <span>Floor no</span>
                                                        </div>
                                                    </li>

                                                </ul>
                                            }
                                        }

                                    </div>



                                </div>
                            </div>
                        </div>

                    }
                }

            </div>

        </div>
    </div>


</div>




