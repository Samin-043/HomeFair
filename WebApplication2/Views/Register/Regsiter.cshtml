@model WebApplication2.Models.Register

@{
    ViewBag.Title = "Regsiter";
}

<style>
    .navbar-nav > li > a {
        padding: 4px;
        color: currentcolor;
        padding: 5px;
        padding-right: 15px;
    }

    .navbar {
        padding-top: 15px;
        padding-bottom: 15px;
        border: 0;
        border-radius: 0;
        margin-bottom: 0;
        font-size: 11px;
        letter-spacing: 5px;
        font-family: system-ui;
    }
    .h4, h4 {
        font-size: 1.5rem;
        color: black;
    }

    .h2, h2 {
        font-size: 2rem;
        text-align: center;
        padding: 20px;
        color: deeppink;
    }

    .form-group {
        padding: 4px;
        font-size: 14px;
    }

    .form-control {
        font-size: 14px;
    }

    .col-md-10 {
        -ms-flex: 0 0 83.333333%;
        flex: 0 0 83.333333%;
        max-width: 66.333333%;
    }

    button, input, optgroup, select, textarea {
        margin: 0;
        font-family: inherit;
        font-size: inherit;
        line-height: inherit;
        width: inherit;
    }

    .col-md-offset-2 {
        width: inherit;
        font-size: large;
    }

    .show-image {
        padding: 20px;
        width: 100%;
        height: 500px;
    }
    .row{
        padding:20px;
    }

</style>



<nav class="navbar navbar-expand-sm bg-primary navbar-dark">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    @Html.ActionLink("HomeFair", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <!--<li>@Html.ActionLink("Home", "Index", "Home")</li>-->
            <li>@Html.ActionLink("ABOUTUS", "About", "Home")</li>
            <li><a href="/Properties/Details">PROPERTIES</a></li>
            <<li><a href="/Contects/create">CONTACTUS</a></li>
            <li><a href="/Agents/create">POSTPROPERTY</a></li>

        </ul>
    </div>
    <div class="login_Show">
        <ul class="navbar-nav ml-auto">
            <li>
                <!--<i class="houzez-icon icon-single-neutral-circle"></i>-->
                <a href="/Logins/Create" class="btn btn-outline-info">ACCOUNT</a>
            </li>

        </ul>
    </div>


</nav>


<h2>REGISTER</h2>




<div class="container">
    <div class="row">

        <div class="col-lg-6 col-md-12">
            <img src="~/Content/register.gif" height="450" width="630" />
        </div>
        <div class="col-lg-6 col-md-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Usesname, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Usesname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Usesname, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Register" class="btn btn-success" />



                            @TempData["msg"]
                        </div>

                        <div class="col-md-offset-2 col-md-10">
                            
                            <!--<input type="submit" value="Login" class="btn btn-default" />-->
                            <a href="/Logins/create" class="btn btn-dark">Login</a>
                        </div>

                    </div>
                </div>
            }

        </div>

    </div>
</div>

<div class="container-fluid bg-2 text-center">
    <h3 class="margin">Welcome in HomeFair</h3>
    <p>HomeFair is a uniqe palce for buying property sale,rent and also for show.</p>

    <footer class="container-fluid bg-4 text-center">
        <p>Our team always with you...</p>
    </footer>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
